<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/songs_textView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_TUTTECANZONI_"
                android:textSize="17sp" />

        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/title_editText"
        android:layout_width="269dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Titolo"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="49dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/title_editText"
        app:layout_constraintTop_toBottomOf="@+id/remove_button" />

    <Button
        android:id="@+id/remove_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>